<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_100">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/ll_img_enter_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <pro.rasht.museum.ar.Classes.CircularImageView
                        android:id="@+id/enter_place_image"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_profile"
                        android:tint="@color/material_grey_500" />

                </FrameLayout>


            </LinearLayout>


            <!-- Card View 1 -->
            <android.support.v7.widget.CardView
                android:id="@+id/cv_info1_enter_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_img_enter_profile"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <!-- F name -->
                    <LinearLayout
                        android:id="@+id/ll_fname_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_fname_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="نام"
                            android:text="as"
                            android:padding="10dp"
                            android:textColor="@color/material_grey_600"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <!-- L name -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ll_fname_enter_profile"
                        android:background="@color/material_grey_200" />

                    <LinearLayout
                        android:id="@+id/ll_lname_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_fname_enter_profile"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_lname_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="نام خانوادگی"
                            android:text="as"
                            android:padding="10dp"
                            android:textColor="@color/material_grey_600"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ll_lname_enter_profile"
                        android:background="@color/material_grey_200" />


                    <!-- Ostan -->
                    <LinearLayout
                        android:id="@+id/ll_ostan_enter_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_lname_enter_profile"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_state_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="استان"
                            android:text="as"
                            android:padding="10dp"
                            android:textColor="@color/material_grey_600"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ll_ostan_enter_profile"
                        android:background="@color/material_grey_200" />


                    <!-- City -->
                    <LinearLayout
                        android:id="@+id/ll_city_enter_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_ostan_enter_profile"
                        android:orientation="horizontal">


                       <!-- <EditText
                            android:id="@+id/et_city_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="شهر"
                            android:padding="10dp"
                            android:textColor="@color/material_grey_600"
                            android:textSize="14sp" />-->


                        <Spinner
                            android:id="@+id/et_city_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp" />



                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>


            <!-- Card View 2 -->
            <android.support.v7.widget.CardView
                android:id="@+id/cv_info2_enter_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_info1_enter_profile"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <!-- F name -->
                    <LinearLayout
                        android:id="@+id/ll_mobile_enter_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_mobile_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="شماره همراه"
                            android:text="09111358524"
                            android:padding="10dp"
                            android:textColor="@color/material_grey_600"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/material_grey_200" />

                    <!-- L name -->
                    <LinearLayout
                        android:id="@+id/ll_email_enter_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_mobile_enter_profile"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/et_email_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="ایمیل"
                            android:text="a@sd.com"
                            android:padding="10dp"
                            android:textColor="@color/material_grey_600"
                            android:textSize="14sp" />


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>


            <!-- Card View 3 -->
            <android.support.v7.widget.CardView
                android:id="@+id/cv_info3_enter_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_info1_enter_profile"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <!-- Map -->
                    <LinearLayout
                        android:id="@+id/ll_map_profile"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">


                        <!--<ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@drawable/map"/>-->


                        <br.com.simplepass.mapfragmentwrapper.MapFragmentWrapper
                            android:id="@+id/map_wrapper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <fragment
                                android:id="@+id/map_place"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                class="com.google.android.gms.maps.SupportMapFragment"/>

                        </br.com.simplepass.mapfragmentwrapper.MapFragmentWrapper>




                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>



            <Button
                android:id="@+id/btn_next_place"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_round"
                android:text="@string/save" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>


